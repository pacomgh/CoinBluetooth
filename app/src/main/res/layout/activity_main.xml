<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.coinbluetooth.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/title"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/medium"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnSendCode"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="121dp"
        android:background="@color/colorAccent"
        android:text="@string/sendCode"
        android:textColor="@color/white"
        android:textSize="@dimen/medium" />

    <Button
        android:id="@+id/btnGetCode"
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSendCode"
        android:layout_alignEnd="@+id/btnSendCode"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-133dp"
        android:layout_marginEnd="-4dp"
        android:background="@color/colorAccent"
        android:text="@string/getCode"
        android:textColor="@color/white"
        android:textSize="@dimen/medium" />

    <Button
        android:id="@+id/btnDisc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/orange"
        android:text="@string/disc"
        android:textColor="@color/white"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGetCode"
        android:layout_marginTop="120dp"
        android:text="" />

</RelativeLayout>
